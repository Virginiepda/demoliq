{% extends 'base.html.twig' %}

 {% block title %}DemoLiquide | Les questions à débattre{% endblock %}

{% block content %}
    <h1>Les questions à débattre</h1>

    <table class="table table-striped">
        <tr>
            <th>Question</th>
            <th>Sujets</th>
            <th>Appuis</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
            {% for question in questions %}
        <tr>
            <td><a class="question" href="{{ path('question_detail', {'id': question.id}) }}">{{ question.title }}</a></td>
            <td>{{ question.subjects |join(' | ') }}</td>
            <td>{{ question.supports }}</td>
            <td>{{ question.creationDate|date('d-m-Y') }}</td>
            {% if app.user %}
            <td><a class="btn btn-info" href="{{ path('question_detail', {'id': question.id}) }}">Débattre</a></td>
            {% else %}
                <td><a class="btn btn-info" href="{{ path('app_login') }}">Débattre</a></td>
            {% endif %}
        </tr>
        {% endfor %}
    </table>

{% endblock %}
